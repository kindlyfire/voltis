model DiskCollection {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name               String
    type               String
    path               String
    coverPath          String?
    contentUri         String
    contentUriOverride String?
    missing            Boolean @default(false)

    Library   Library    @relation(fields: [libraryId], references: [id], onDelete: Cascade)
    libraryId String
    DiskItem  DiskItem[]
}

model DiskItem {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name       String
    path       String
    coverPath  String?
    contentUri String
    /// [DiskItemMetadata]
    metadata   Json

    DiskCollection   DiskCollection @relation(fields: [diskCollectionId], references: [id], onDelete: Cascade)
    diskCollectionId String
}

model Collection {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name         String
    nameOverride String?
    type         String
    contentUri   String  @unique
    coverPath    String?
    /// [CollectionMetadata]
    metadata     Json

    Item               Item[]
    UserCollectionData UserCollectionData[]
}

model Item {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name         String
    nameOverride String?
    type         String
    contentUri   String
    coverPath    String?
    metadata     Json
    sortValue    Int[]

    Collection          Collection            @relation(fields: [collectionId], references: [id], onDelete: Cascade)
    collectionId        String
    UserItemData        UserItemData[]
    UserCustomList_Item UserCustomList_Item[]
}

model UserItemData {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    /// [UserItemDataProgress]
    progress   Json?
    completed  Boolean @default(false)
    bookmarked Boolean @default(false)

    User   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String
    Item   Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
    itemId String

    @@unique([userId, itemId])
}

model UserCollectionData {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    notes  String?
    rating Int?

    User         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId       String
    Collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
    collectionId String

    @@unique([userId, collectionId])
}

model UserCustomList {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name   String
    type   String // 'custom' | 'reading' | 'plan to read' | 'on hold' | 're-reading' | 'dropped'
    public Boolean @default(false)

    User                User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId              String
    UserCustomList_Item UserCustomList_Item[]
}

model UserCustomList_Item {
    id        String   @id
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    order Int
    notes String?

    UserCustomList   UserCustomList @relation(fields: [userCustomListId], references: [id], onDelete: Cascade)
    userCustomListId String
    Item             Item           @relation(fields: [itemId], references: [id], onDelete: Cascade)
    itemId           String

    @@unique([userCustomListId, itemId])
}
